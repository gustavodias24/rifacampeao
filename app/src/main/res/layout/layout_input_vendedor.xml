<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o nome"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>

        <!-- Documento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recolhe"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edt_documento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o documento"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Celular -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edt_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(99) 99999-9999"
            android:inputType="phone"
            android:layout_marginBottom="12dp"/>

        <!-- Despesas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Despesas"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edt_despesas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor das despesas"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <!-- Senha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha (6 dígitos)"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edt_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a senha"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:layout_marginBottom="12dp"/>

        <!-- Comissão -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comissão (%)"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/edt_comissao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 5.0"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <!-- Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioAtivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Ativo" />

            <RadioButton
                android:id="@+id/radioDesativado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Desativado" />
        </RadioGroup>

        <!-- Botão -->
        <Button
            android:id="@+id/cadatrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar" />

    </LinearLayout>
</ScrollView>
