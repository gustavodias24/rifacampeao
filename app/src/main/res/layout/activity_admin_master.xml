<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/marrom"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".AdminMasterActivity">

        <LinearLayout
            android:id="@+id/mart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cadastrarvendedores"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/vendedor_icon"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/lancardatalimite"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/gerente_icon"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/CadastrarRegiao"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/regiao_icon"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/banner"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/banner_icon"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/resultados_icon"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/relatorio_icon" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Bilhetes"
            android:textColor="#000000"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bilhetes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>