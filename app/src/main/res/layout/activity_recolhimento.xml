<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".RecolhimentoActivity">

        <!-- Botão principal -->
        <Button
            android:id="@+id/btnGerarRelatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp"
            android:text="Gerar relatório"
            android:textAllCaps="false" />

        <!-- Filtros -->
        <LinearLayout
            android:id="@+id/containerFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Linha de datas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data início"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etDataInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                        android:focusable="false"
                        android:hint="dd/mm/aaaa"
                        android:inputType="date"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data fim"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etDataFim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                        android:focusable="false"
                        android:hint="dd/mm/aaaa"
                        android:inputType="date"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Linha do vendedor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendedor"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12sp" />

                <AutoCompleteTextView
                    android:id="@+id/edtVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite o nome do vendedor"
                    android:inputType="textPersonName"
                    android:completionThreshold="1"
                    android:layout_marginBottom="8dp" />

                <!-- Botão principal -->
                <Button
                    android:id="@+id/btnFiltrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:paddingVertical="12dp"
                    android:text="Filtrar"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#1F000000" />

        <Button
            android:id="@+id/btnadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/teal_200"
            android:paddingVertical="12dp"
            android:text="Adicionar Recolhimento"
            android:textAllCaps="false" />

        <!-- Lista com loading sobreposto -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recolhimentorv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@android:layout/simple_list_item_2" />

            <ProgressBar
                android:id="@+id/progressRecolhimento"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>
</ScrollView>